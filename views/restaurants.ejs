<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sizzle Swipe</title>

  <!-- Swiper CSS -->
  <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
  
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

  <!-- Custom CSS -->
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f9e2ca;
      background-image: url('/images/card.png');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      height: 500px;
    }

    /* Navbar */
    .navbar {
      position: fixed;
      top: 0;
      width: 100%;
      background-color: #5f4123;
      color: white;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px 20px;
      z-index: 1000;
    }

    .navbar h1 {
      font-size: 1.5rem;
      margin: 0px;
      position: relative;
      right: 1030px;
    }

    .navbar button {
      background-color: white;
      color: #4c2b08;
      border: none;
      border-radius: 50%;
      padding: 10px;
      font-size: 1rem;
      cursor: pointer;
    }

    .swiper-container {
      width: 60%;
      height: calc(100vh - 300px);
      display: flex;
      justify-content: center;
      align-items: center;
      margin-top: 176px;
      margin-left: 269px;
      overflow: hidden;
    }

    .swiper-slide {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 100%;
      height: 100%;
      border-radius: 10px;
      overflow: hidden;
      position: relative;
      transform: scale(0.7);
      transition: transform 0.3s ease-out, opacity 0.3s ease-out;
      opacity: 0.8;
      background-size: cover;
      background-position: center;
    }

    .swiper-slide-active {
      transform: scale(1);
      opacity: 1;
    }

    .restaurant-card {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      color: white;
      text-align: center;
      display: flex;
      flex-direction: column;
      justify-content: center;
      background-color: rgba(0, 0, 0, 0.5);
    }

    .restaurant-card h3 {
      font-size: 1.5rem;
      margin: 0;
      padding: 0.5rem;
    }

    .restaurant-card p {
      font-size: 1rem;
      margin: 0.5rem 0;
      padding: 0 1rem;
    }

    .select-btn {
      margin-top: 20px;
      margin-left: 346px;
      padding: 10px 20px;
      background-color: #28a745;
      color: white;
      border: none;
      border-radius: 5px;
      font-size: 1rem;
      cursor: pointer;
      width: 83px;
    }

    /* Overlay */
    .overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.8);
      backdrop-filter: blur(8px);
      display: none;
      justify-content: center;
      align-items: center;
      z-index: 2000;
    }

    /* Invitation Card */
    .invitation {
      width: 300px;
      height: 200px;
      background-image: url('/images/env.jpeg');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  color: white;
      border-radius: 10px;
      display: flex;
      justify-content: center;
      align-items: center;
      transform-origin: center;
      transform: rotate(-10deg);
      opacity: 0;
      animation: invitation-appear 1s forwards, invitation-open 1s 1s forwards;
    }
    .close-btn {
    position: absolute;
    bottom: 300px;
    left: 5px;
    background: none;
    border: none;
    font-size: 1.5rem;
    color: black;
    cursor: pointer;
    z-index: 10;
  }

  .close-btn:hover {
    color: red;
  }

  /* Adjust Invitation Position */
  .invitation {
    position: relative; /* Required for close button positioning */
  }

    @keyframes invitation-appear {
      0% {
        transform: rotate(-10deg);
        opacity: 0;
      }
      50% {
        transform: rotate(10deg);
        opacity: 1;
      }
      100% {
        transform: rotate(0);
        opacity: 1;
      }
    }

    @keyframes invitation-open {
      0% {
        transform: scale(0.9);
      }
      100% {
        transform: scale(1);
      }
    }

    .letter {
  display: none;
  font-family: 'Georgia', serif; /* Use a serif font for elegance */
  text-align: center;
  padding: 20px;
  border-radius: 10px;
  background-image: url('/images/invi.png');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  color: black;
  line-height: 1.6;
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
  max-width: 400px;
  margin: 0 auto;
  font-size: 1rem;
}

.letter h1 {
  font-size: 2.5rem;
  margin: 10px 0;
  font-family: 'Brush Script MT', cursive; /* Mimic the elegant script for "Gala" */
  font-weight: normal;
  color: black;
}

.letter h4 {
  font-size: 1.2rem;
  margin-top: 10px;
  font-weight: normal;
  color: #555;
  padding-bottom: 0%;
}

.letter p {
  margin-top: 0%;
  font-size: 1rem;
  color: #333;
}

.letter span {
  font-weight: bold;
  font-style: italic;
}
.learn-more-btn {
            display: inline-block;
            margin-top: 20px;
            margin-left: 40px;
            padding: 10px 20px;
            font-size: 14px;
            color: #ffffff;
            text-transform: uppercase;
            text-decoration: none;
            background-color: transparent;
            border: 1px solid #ffffff;
            border-radius: 25px;
            transition: all 0.3s ease;
        }

        .learn-more-btn:hover {
            background-color: #f9e2ca;
            color: #4c2b08;
        }


    .letter.show {
      display: block;
      animation: fadeIn 0.5s forwards;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }
  </style>
</head>
<body>
  <div class="navbar">
    <button onclick="window.location.href='/suggested-users'">
      <i class="fas fa-arrow-left"></i>
    </button>
    <h1>Sizzle Swipe</h1>
  </div>

  <div class="swiper-container">
    <div class="swiper-wrapper">
      <% restaurants.forEach(restaurant => { %>
        <div class="swiper-slide" style="background-image: url('<%= restaurant.imageUrl %>')">
          <div class="restaurant-card">
            <h3><%= restaurant.name %></h3>
            <p><%= restaurant.description %></p>
            <button class="select-btn" onclick="selectRestaurant('<%= restaurant.name %>')">Select</button>
          </div>
        </div>
      <% }); %>
    </div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </div>

  <!-- Overlay -->
  <div class="overlay" id="overlay">
    <div class="invitation">
      <!-- Cross Button -->
      <button class="close-btn" onclick="window.location.href='/restaurants'">✖</button>
      
      <div class="letter" id="letter">
        <h1>An Evening Just for Us</h1>
        <h4>Please Join Me</h4>
        for a delightful dinner at
        <p><span id="selected-restaurant"></span></p>
          Let’s indulge in great food, good conversation, and a beautiful evening
          together.
        </p>
        <p>Looking forward to sharing this special time with you,</p>
      </div>
    </div>
    <a class="learn-more-btn" href="/payment">Book Now</a>
  </div>

  <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

  <script>
    const swiper = new Swiper('.swiper-container', {
      loop: false,
      spaceBetween: 50,
      slidesPerView: 1,
      centeredSlides: true,
      effect: 'slide',
      direction: 'vertical',
      speed: 800,
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
    });

    function selectRestaurant(restaurantName) {
      document.getElementById('selected-restaurant').textContent = restaurantName;
      const overlay = document.getElementById('overlay');
      const letter = document.getElementById('letter');
      overlay.style.display = 'flex';

      setTimeout(() => {
        letter.classList.add('show');
      }, 1500);

    function dismissOverlay() {
      window.location.href = '/restaurants';
  }
    }
  </script>
</body>
</html>